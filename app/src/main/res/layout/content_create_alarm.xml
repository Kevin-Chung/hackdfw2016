<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hackdfw2016.smartalarm.CreateAlarm"
    tools:showIn="@layout/activity_create_alarm"
    android:orientation="vertical">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/alarmName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint ="Alarm Name"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addPlace"
        android:text="Where will you be going?"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arival Time"
            android:id="@+id/arivalTime" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preperation Time"
            android:id="@+id/prepTime"
            android:inputType="number"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#CDC1C5"
        android:text="Repeat"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Sunday"
            android:background="@color/white"
            android:layout_margin="@dimen/space_xsmall"
            android:textAllCaps="false"
            android:text="Su"/>

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Monday"
            android:background="@color/white"
            android:layout_margin="@dimen/space_xsmall"
            android:textAllCaps="false"
            android:text="Mo"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Tuesday"
            android:background="@color/white"
            android:layout_margin="@dimen/space_xsmall"
            android:textAllCaps="false"
            android:text="Tu"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Wednesday"
            android:background="@color/white"
            android:layout_margin="@dimen/space_xsmall"
        android:textAllCaps="false"
            android:text="We"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Thursday"
            android:background="@color/white"
            android:layout_margin="@dimen/space_xsmall"
            android:textAllCaps="false"
            android:text="Th"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Friday"
            android:background="@color/white"
            android:layout_margin="@dimen/space_xsmall"
            android:textAllCaps="false"
            android:text="Fr"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/Saturday"
            android:background="@color/white"
            android:layout_margin="@dimen/space_xsmall"
            android:textAllCaps="false"
            android:text="Sa"/>


    </LinearLayout>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Enable maximum annoying mode?"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dip"
        android:background="@color/gray"
        android:layout_marginTop="@dimen/space_small"
        android:layout_marginBottom="@dimen/space_small" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_weight="1"
            android:text="Save"
            android:layout_marginRight="@dimen/space_small"/>

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorAccent"
            android:layout_weight="1"
            android:text="Cancel"/>
    </LinearLayout>


</LinearLayout>
